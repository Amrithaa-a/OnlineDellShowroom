@model OnlineDellShowroom.Models.Laptop

@{
    Layout = "~/Views/Layout/AdminLayout.cshtml";
    ViewBag.Title = "Add Laptop";
}

<div class="card bg-light p-4 rounded-lg shadow">
    <div class="card-body">
        <h2 class="card-title">Add New Laptop</h2>

        @using (Html.BeginForm("AddLaptop", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="form-group">
                @Html.LabelFor(model => model.LaptopName)
                @Html.EditorFor(model => model.LaptopName, new { htmlAttributes = new { @class = "form-control", @id = "laptopNameInput" } })
                <span id="laptopNameError" class="text-danger"></span>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Description)
                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", @id = "descriptionInput" } })
                <span id="descriptionError" class="text-danger"></span>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ImageFile)
                <div>
                    <input type="file" name="ImageFile" accept="image/*" class="form-control" id="imageFileInput" />
                    <span id="fileError" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Price)
                @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control", @id = "priceInput" } })
                <span id="priceError" class="text-danger"></span>
            </div>

            <input type="submit" value="Add Laptop" class="btn btn-primary" />
        }
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="~/Scripts/JavaScript/Userscript.js"></script>

