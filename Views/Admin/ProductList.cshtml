@model List<OnlineDellShowroom.Models.Laptop>

@{
    Layout = "~/Views/Layout/AdminLayout.cshtml";
    ViewBag.Title = "Product List";
}

<h2 class="text-center mt-4">Product List</h2>

<div class="container mt-4">
    <div class="row">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Laptop ID</th>
                    <th>Laptop Name</th>
                    <th>Description</th>
                    <th>Image</th>
                    <th>Price</th>
                    <th class="text-center">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var laptop in Model)
                {
                    <tr>
                        <td>@laptop.LaptopId</td>
                        <td>@laptop.LaptopName</td>
                        <td style="max-width: 250px; overflow: hidden; text-overflow: ellipsis;">@laptop.Description</td>
                        <td><img src="@laptop.ImageUrl" alt="@laptop.LaptopName" style="max-width: 100px;" /></td>
                        <td>@laptop.Price</td>
                        <td class="text-center">
                            <a href="@Url.Action("ViewLaptop", new { id = laptop.LaptopId })" class="btn btn-primary btn-sm">View</a>
                            <a href="@Url.Action("EditLaptop", new { id = laptop.LaptopId })" class="btn btn-success btn-sm">Edit</a>
                            <a href="@Url.Action("DeleteLaptop", new { id = laptop.LaptopId })" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
