@{
    ViewBag.Title = "Contact";
}

<main aria-labelledby="title">
    <!-- First Row: -->
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-12 text-center">
                <h3>We’re here to help</h3>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-md-3">
                <div class="card h-100">
                    <img src="~/Content/Images/Contact 1.jpg" class="card-img-top" alt="Tech Support">
                    <div class="card-body">
                        <h5 class="card-title text-center">Get Tech & IT Help</h5>
                        <p class="card-text text-center">Find help for your equipment and services.</p>
                        <div class="text-center">
                            <a href="@Url.Action("UserSignin", "User")" class="btn btn-primary btn-blue">Contact Technical Support</a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card h-100">
                    <img src="~/Content/Images/Contact 2.jpg" class="card-img-top" alt="Chat with Sales">
                    <div class="card-body">
                        <h5 class="card-title text-center">Chat with Sales</h5>
                        <p class="card-text text-center">Get online help from a sales expert.</p>
                        <div class="text-center">
                            <a href="@Url.Action("UserSignin", "User")" class="btn btn-primary btn-blue">Chat with Us Online</a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card h-100">
                    <img src="~/Content/Images/Contact 3.jpg" class="card-img-top" alt="Check Your Orders">
                    <div class="card-body">
                        <h5 class="card-title text-center">Check Your Orders</h5>
                        <p class="card-text text-center">View order status, invoices and request returns.</p>
                        <div class="text-center">
                            <a href="@Url.Action("UserSignin", "User")" class="btn btn-primary btn-blue">Contact Order Support</a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card h-100">
                    <img src="~/Content/Images/Contact 4.jpg" class="card-img-top" alt="Request a Sales Callback">
                    <div class="card-body">
                        <h5 class="card-title text-center">Request a Sales Callback</h5>
                        <p class="card-text text-center">Fill out our form and we’ll call.</p>
                        <div class="text-center">
                            <a href="@Url.Action("UserSignin", "User")" class="btn btn-primary btn-blue">Get a Callback</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Second Row: Help Making a Purchase -->
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-12 text-center">
                <h3>Help Making a Purchase</h3>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-md-3 no-card-border">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title text-center">Chat with Us Online</h5>
                        <p class="card-text text-center">Get online help from a sales expert.</p>
                        <div class="text-center">
                            <a href="@Url.Action("UserSignin", "User")" class="btn btn-primary btn-blue">Begin Online Chat</a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-3 no-card-border">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title text-center">Buy on WhatsApp</h5>
                        <p class="card-text text-center">Message directly one of our sales experts or find the perfect product with the help of our virtual assistant.</p>
                        <div class="text-center">
                            <a href="@Url.Action("UserSignin", "User")" class="btn btn-primary btn-blue">Message Now</a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-3 no-card-border">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title text-center">Request a Dell Advisor Callback</h5>
                        <p class="card-text text-center">Fill out our form and we’ll call.</p>
                        <div class="text-center">
                            <a href="@Url.Action("UserSignin", "User")" class="btn btn-primary btn-blue">Get a Callback</a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-3 no-card-border">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title text-center">Enterprise Accounts</h5>
                        <p class="card-text text-center">Sign in to manage your enterprise account and assets.</p>
                        <div class="text-center">
                            <a href="@Url.Action("UserSignin", "User")" class="btn btn-primary btn-blue">Sign In</a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <!-- Third Row: Dell APEX -->
    <div class="container-fluid apex-section">
        <div class="row">
            <div class="col-md-12">
                <div class="apex-image-container">
                    <img src="~/Content/Images/Apex image.jpg" class="apex-image" alt="Dell APEX Image">
                    <p class="apex-text">Dell APEX Learn more about our cloud experiences delivered as-a-Service.</p>
                    <button class="btn btn-primary btn-blue apex-button">Visit APEX</button>
                </div>
            </div>
        </div>
    </div>
    <!-- Fourth Row: Where to find us -->
    <!-- Fourth Row: Where to find us -->
    <div class="container find-us-section">
        <div class="row">
            <div class="col-md-12">
                <h3 class="find-us-heading">Where to find us</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="card h-100 no-card-border address-card">
                    <h5>Registered Office Address:</h5>
                    <p>Dell International Services India Pvt. Ltd</p>
                    <p>Divyashree Greens, Ground Floor,</p>
                    <p>Sys Nos.12/1, 12/2A and 13/1A,</p>
                    <p>Challaghatta Village, Varthur Hobli,</p>
                    <p>Bengaluru, 560071</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 no-card-border phone-support-card">
                    <h5>Phone Support:</h5>
                    <p>Call: 1800-425-4002</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 no-card-border hours-card">
                    <h5>Hours of Operations:</h5>
                    <p>All 7 days, 9AM – 6 PM (Consumer)</p>
                    <p>Mon – Fri, 9AM – 6 PM (Business)</p>
                </div>
            </div>
        </div>
    </div>
</main>
