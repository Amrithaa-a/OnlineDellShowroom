@{
    ViewBag.Title = "Home Page";
}
<link href="~/Content/CSS/MainIndex.css" rel="stylesheet" />

<main>
    <div class="custom-container">
        <div class="row">
            <!-- Text column -->
            <div class="col-md-6 text-center dell-text mb-5">
                <h1 class="dell-title">Welcome to Online Dell Showroom</h1>
                <p class="dell-subtitle">Discover the latest Dell products and explore a wide range of laptops, desktops, and accessories.</p>
                <!-- Buttons -->
                <div class="button-group">
                    <button class="btn btn-primary">Button 1</button>
                    <span class="separator">|</span>
                    <button class="btn btn-secondary">Button 2</button>
                </div>
            </div>
            <!-- Image column -->
            <div class="col-md-6 text-center dell-image-container">
                <img src="~/Content/Images/laptop1.jpg" class="dell-image" />
            </div>
        </div>
    </div>

    <!-- Card row -->
    <div class="row explore-section">
        <!-- Explore Dell Technologies Section -->
        <div class="row">
            <div class="col-md-12 text-center explore-heading">
                <h2>Explore Dell Technologies</h2>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100">
                <img src="~/Content/Images/Homepageslider1.jpg" class="card-img-top" alt="Card Image 1">
                <div class="card-body">
                    <h5 class="card-title explore-card-heading">Explore Dell Technologies</h5>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100">
                <img src="~/Content/Images/Homepageslider3.jpg" class="card-img-top" alt="Card Image 2">
                <div class="card-body">
                    <h5 class="card-title explore-card-heading">Explore Dell Technologies</h5>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100">
                <img src="~/Content/Images/Homepageslider1.jpg" class="card-img-top" alt="Card Image 3">
                <div class="card-body">
                    <h5 class="card-title explore-card-heading">Explore Dell Technologies</h5>
                </div>
            </div>
        </div>
    </div>

    <!-- New section with designers image and text -->
    <div class="row designers-section">
        <div class="col-md-6">
            <img src="~/Content/Images/Designers.jpg" class="designers-image" alt="Designers Image">
        </div>
        <div class="col-md-6">
            <div class="back-to-college-text">
                <h6 class="h6-responsive">BACK TO COLLEGE</h6>
                <h3 class="h3-responsive">Doing Is The New Learning</h3>
                <p class="p-responsive">Empower your ideas now with the latest tech from Dell. Get instant discounts* on Netbanking & headsets.</p>
                <div class="button-group text-center">
                    <button class="btn btn-primary">Shop All</button>
                    <span class="separator">|</span>
                    <button class="btn btn-secondary">Shop Deals</button>
                </div>
            </div>
        </div>
    </div>



    <!-- Semi Annual Sale Section -->
    <div class="row semi-annual-sale-section">
        <div class="col-md-6">
            <div class="semi-annual-sale-text">
                <h3>SEMI ANNUAL SALE</h3>
                <p>Upgrade Every Workday. Get the latest 13th Gen Intel® Core™ processor tech for greater performance.</p>
                <div class="button-group text-center">
                    <button class="btn btn-primary">Shop All</button>
                    <span class="separator">|</span>
                    <button class="btn btn-secondary">Shop Deals</button>
                </div>
            </div>
        </div>
        <div class="col-md-6 text-right">
            <img src="~/Content/Images/semianualsection.jpg" class="laptop-image" alt="Laptop Image">
        </div>
    </div>
    <!-- Dell Support Section -->
    <div class="row dell-support-section">
        <div class="col-md-6">
            <div class="dell-support-text">
                <h3>Dell Support</h3>
                <p>Get your questions answered at left side and a list with Contact Support.</p>
                <p>Let us assist you with any product or service questions.</p>
            </div>
        </div>
        <div class="col-md-6">
            <ul class="support-list">
                <li class="support-link"><a href="#">Contact Support</a></li>
                <li class="support-text">Let us assist you with any product or service questions.</li>
                <li class="support-link"><a href="#">Warranty and Contracts</a></li>
                <li class="support-text">Check warranty of the product</li>
                <li class="support-link"><a href="#">Product Support</a></li>
                <li class="support-text">Expertise. Convenience. Quality Support.</li>
                <li class="support-link"><a href="#">Drivers and Downloads</a></li>
                <li class="support-text">Get the latest drivers and software</li>
            </ul>
        </div>
    </div>

</main>
