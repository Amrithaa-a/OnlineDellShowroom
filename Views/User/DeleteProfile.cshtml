@model OnlineDellShowroom.Models.UserSignup

@{
    ViewBag.Title = "DeleteProfile";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h2 class="text-center">Are you sure you want to delete Profile</h2>
        </div>
        <div class="card-body">
            <div>
                <dl class="row">
                    <dt class="col-sm-3">Firstname</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Firstname)</dd>

                    <dt class="col-sm-3">Lastname</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Lastname)</dd>

                    <dt class="col-sm-3">Date of Birth</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Dateofbirth)</dd>

                    <dt class="col-sm-3">Gender</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Gender)</dd>

                    <dt class="col-sm-3">Mobile Number</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Mobilenumber)</dd>

                    <dt class="col-sm-3">Email</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

                    <dt class="col-sm-3">Address</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Address)</dd>

                    <dt class="col-sm-3">State</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.State)</dd>

                    <dt class="col-sm-3">City</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.City)</dd>

                    <dt class="col-sm-3">Username</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Username)</dd>
                </dl>
                @using (Html.BeginForm("DeleteProfileConfirmed", "User", new { userSignupId = Model.UserSignupId }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group row">
                        <div class="col-md-10 offset-md-2">
                            <input type="submit" value="Delete" class="btn btn-danger" />
                            @Html.ActionLink("Cancel", "UserProfile", null, new { @class = "btn btn-secondary" })
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
