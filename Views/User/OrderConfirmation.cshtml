@model OnlineDellShowroom.Models.OrderView

@{
    Layout = "~/Views/Layout/UserLayout.cshtml";
    ViewBag.Title = "Order Confirmation";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h2 class="text-center mb-4">Order Confirmation</h2>
            <div class="alert alert-success">
                Your order has been placed successfully!
            </div>
            <h2 class="text-center mb-4">Order Details:</h2>
            <p>Name: @Model.Name</p>
            <p>Address: @Model.Address</p>
            <p>Contact Number: @Model.ContactNumber</p>
            <p>Pincode: @Model.Pincode</p>
        </div>
    </div>
</div>
