@model OnlineDellShowroom.Models.UserSignin

@{
    ViewBag.Title = "UserSignin";
}
@if (TempData["SignUpSuccess"] != null)
{
    <div class="alert alert-success">
        <strong>Success!</strong> @TempData["SignUpSuccess"]
    </div>
}
@if (TempData["SigninErrorMsg"] != null)
{
    <div class="alert alert-danger">
        <strong>Error!</strong> @TempData["SigninErrorMsg"]
    </div>
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card bg-light p-4 rounded-lg shadow">
                <div class="card-body">
                    <h4 class="card-title text-center mb-4">Sign in</h4>
                    <hr />
                    @using (Html.BeginForm("UserSignin", "User", FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-group mt-3">
                            @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "control-label" })
                            <div>
                                @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control", @id = "Username" } })
                                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger", @id = "usernameError" })
                            </div>
                        </div>

                        <div class="form-group mt-3">
                            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label" })
                            <div>
                                @Html.PasswordFor(model => model.Password, new { @class = "form-control", @id = "Password" })
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger", @id = "passwordError" })
                            </div>
                        </div>

                        <div class="form-group mt-3">
                            <div class="text-center">
                                <input type="submit" value="Sign In" class="btn btn-primary" />
                            </div>
                        </div>

                    }

                    <div class="text-center mt-3">
                        <p>Don't have an account yet? <a href="@Url.Action("UserSignup", "User")">Sign up here</a>.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/JavaScript/Onfocusoutadminuser.js")
}
